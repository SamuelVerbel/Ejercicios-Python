# Comisiones de un vendedor
sueldo_base = float(input("Ingresa el sueldo base del vendedor: "))
venta1 = float(input("Ingresa el valor de la primera venta: "))
venta2 = float(input("Ingresa el valor de la segunda venta: "))
venta3 = float(input("Ingresa el valor de la tercera venta: "))

comisiones = (venta1 + venta2 + venta3) * 0.10
sueldo_total = sueldo_base + comisiones

print(f"Comisiones obtenidas: ${comisiones:.2f}")
print(f"Sueldo total del mes: ${sueldo_total:.2f}")
